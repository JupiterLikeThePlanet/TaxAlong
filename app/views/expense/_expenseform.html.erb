

<%= form_for :expenses, url: user_expense_index_path, :html => { :class => ""} do |f| %>

    <div class="flex-row">
      <%= f.date_select :date, :order => [:day, :month, :year] %>
    </div>

    <div class="flex-row">
      <%= f.select :expense_type, ['Gas', 'Food', 'Maintenance', 'Car Payment', 'License, Title and Registration', 'Car Wash', 'Parking Fees', 'Tolls', 'Phone Bill', 'Other'], selected_key = f.expense.expense_type%>
    </div>

    <div class="flex-row">
      <p>
        <%= f.label :cost, :html => {:class => "lf--label", :id => ""} %>
        <%= f.number_field :cost, :step => "0.01", :html => {:class => "lf--input"} %>
      </p>
    </div>

    <div id="hidden-value"> </div>

    <div class="flex-row">
      <%= f.submit "Add Expense", class: 'button tiny radius', :html => {:class => "lf--submit"}  %>
    </div>
<% end %>