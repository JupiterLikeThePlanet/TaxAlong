<h1 class="page_header">Shift Dash</h1>
<p>Check out your shifts!</p>

<%= month_calendar events: @shifts do |date, shifts| %>
  <%= date %>

    <% shifts.each do |shift|%>
        <div>
            <p>Shift earnings: <%= shift.earnings%>, <%=link_to "Shift Details", user_shift_path(@user.id, shift.id), method: :get %> </p>
        </div>
    <%end%>


<% end %>